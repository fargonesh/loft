{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Loft",
  "scopeName": "source.loft",
  "patterns": [
    { "include": "#comments" },
    { "include": "#function-definitions" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#special-values" },
    { "include": "#types" },
    { "include": "#builtin-calls" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.loft",
          "match": "//.*$"
        },
        {
          "name": "comment.block.loft",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "function-definitions": {
      "patterns": [
        {
          "comment": "fn/teach fn/async fn â€” matched without lookbehind, uses captures",
          "match": "\\b(teach\\s+async\\s+fn|teach\\s+fn|async\\s+fn|fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.loft" },
            "2": { "name": "entity.name.function.definition.loft" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.loft",
          "match": "\\b(if|else|while|for|in|return|break|continue|match|from|import|use)\\b"
        },
        {
          "name": "keyword.other.loft",
          "match": "\\b(let|const|fn|def|struct|enum|impl|trait|async|await|lazy|learn|teach|as|pub|self|type)\\b"
        },
        {
          "name": "storage.modifier.loft",
          "match": "\\bmut\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.interpolated.loft",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.template.expression.loft",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.loft" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.loft" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|`|\\$)"
            }
          ]
        },
        {
          "name": "string.quoted.double.loft",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            }
          ]
        },
        {
          "name": "string.quoted.single.loft",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.loft",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.loft",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "special-values": {
      "patterns": [
        {
          "name": "constant.language.boolean.loft",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.loft",
          "match": "\\b(null|void)\\b"
        },
        {
          "name": "support.function.macro.loft",
          "match": "\\b(Some|None|Ok|Err)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.loft",
          "match": "\\b(num|str|bool|void|any)\\b"
        },
        {
          "name": "entity.name.type.loft",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "builtin-calls": {
      "patterns": [
        {
          "comment": "stdlib module qualifier: term.println, math.abs, etc.",
          "match": "\\b(term|math|json|fs|web|time|random|string|array|encoding|object)(?=\\.)",
          "name": "support.class.loft"
        },
        {
          "comment": "any function call",
          "name": "entity.name.function.loft",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.loft",
          "match": "(==|!=|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.loft",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.pipe.loft",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.optional-chain.loft",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.arithmetic.loft",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.loft",
          "match": "(\\+=|-=|\\*=|/=|=)"
        },
        {
          "name": "keyword.operator.arrow.loft",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.spread.loft",
          "match": "\\.\\.\\." 
        },
        {
          "name": "keyword.operator.range.loft",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.nullish.loft",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.optional.loft",
          "match": "\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.loft",
          "match": ","
        },
        {
          "name": "punctuation.terminator.loft",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.loft",
          "match": ":"
        },
        {
          "name": "punctuation.bracket.loft",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        }
      ]
    }
  }
}
