{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Loft",
  "scopeName": "source.loft",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.loft",
          "match": "//.*$"
        },
        {
          "name": "comment.block.loft",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.loft",
          "match": "\\b(if|else|while|for|in|return|break|continue|match)\\b"
        },
        {
          "name": "keyword.other.loft",
          "match": "\\b(let|const|mut|fn|def|struct|enum|impl|trait|async|await|lazy|learn|teach)\\b"
        },
        {
          "name": "storage.modifier.loft",
          "match": "\\b(mut|async)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.template.loft",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.template.expression.loft",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.loft" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.loft" }
              },
              "patterns": [
                { "include": "source.loft" }
              ]
            },
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|`|\\$)"
            }
          ]
        },
        {
          "name": "string.quoted.double.loft",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            }
          ]
        },
        {
          "name": "string.quoted.single.loft",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.loft",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.loft",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.loft",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.loft",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.definition.loft",
          "match": "(?<=fn\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.loft",
          "match": "\\b(num|str|bool)\\b"
        },
        {
          "name": "entity.name.type.loft",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.loft",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.other.constant.loft",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.loft",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.loft",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.loft",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.loft",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.arrow.loft",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.member.loft",
          "match": "\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.loft",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.bracket.loft",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        }
      ]
    }
  }
}
