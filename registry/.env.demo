# GitHub OAuth Credentials
# Create an app at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here

# The URL of the registry backend (where GitHub will send the callback)
# For local dev, this is the backend port
PUBLIC_URL=http://localhost:5050

# The URL of the frontend (where the registry redirects after login)
# For local dev, this is the Vite dev server
FRONTEND_URL=http://localhost:5173

# Directory for storing package data and user info
STORAGE_DIR=./registry-storage

# Secret used for signing JWT tokens
JWT_SECRET=a_very_secret_random_string_here

# Address to bind the server to
BIND_ADDR=0.0.0.0:5050